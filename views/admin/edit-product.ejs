<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/forms.css" />
    <link rel="stylesheet" href="/css/product.css" />
</head>
<body>
    <%- include('../includes/navigation.ejs') %>

        <form class="product-form" action=<% if(editing) { %>"/edit-product"<% } else { %>"/product"<% } %> method="POST">
            <div class="form-control">
                <label for="title">Title</label>
                <input type="text" name="title" id="title" <% if(editing) { %> value="<%=product.title%>" <% } %> />
            </div>
            <div class="form-control">
                <label for="imageUrl">Image URL</label>
                <input type="text" name="imageUrl" id="imageUrl" <% if(editing) { %> value="<%=product.imageUrl%>" <% } %> />
            </div>
            <div class="form-control">
                <label for="price">Price</label>
                <input type="number" name="price" id="price" <% if(editing) { %> value="<%=product.price%>" <% } %> />
            </div>
            <div class="form-control">
                <label for="description">Description</label>
                <textarea name="description" id="description" rows="5" ><% if(editing) { %><%=product.description%><% } %> </textarea>
            </div>
            
            <% if (editing) { %>
                <input type="hidden" name="productId" id="productId" value="<%=product.id%>" />
            <% } %>

            <button type="submit" class="btn"><% if(editing) { %>Update Product<% } else { %>Add Product<% } %></button>
        </form>

<%- include('../includes/end.ejs') %>